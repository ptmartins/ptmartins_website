---
import { Image } from "astro:assets";

const projects = [
    {
        title: 'Carlos Almaça - Tribute page',
        thumb: '/images/projects/almaca.png',
        description: 'Tribute page to FCUL professor Carlos Almaça', 
        link: 'https://almaca.vercel.app',
        stack: ['HTML', 'CSS', 'Javascript'], 
    },
    {
        title: 'Landing page',
        thumb: '/images/projects/sg19.png',
        description: 'Professional landing page featuring current CV and research publications from ORCID API.',
        link: 'https://sg19.vercel.app',
        stack: ['Astro.js', 'CSS', 'Javascript'], 
    },
    {
        title: 'Passsword Strength',
        thumb: '/images/projects/pwd_strength.png',
        description: 'Codepen case study for a form containing inputs that check for password strength.',
        link: 'https://codepen.io/snitramordep/full/qBBwXbm',
        stack: ['HTML', 'CSS', 'LESS', 'Javascript'], 
    },
    {
        title: 'Responsive table',
        thumb: '/images/projects/responsive_table.png',
        description: 'Codepen case study for a ultra responsive table.',
        link: 'https://codepen.io/snitramordep/full/vqzVYx',
        stack: ['HTML', 'CSS', 'LESS', 'Javascript'], 
    },
    {
        title: 'Realistic iPhone X',
        thumb: '/images/projects/iPhoneX.png',
        description: 'Codepen for an ultra realistic iPhone X, with interactivity.',
        link: 'https://codepen.io/snitramordep/full/yWxooV',
        stack: ['HTML', 'CSS', 'LESS', 'Javascript'], 
    },
    {
        title: 'Multiple tag handler',
        thumb: '/images/projects/multiple_tags.png',
        description: 'Codepen case study for an UI to manage multiple tags.',
        link: 'https://codepen.io/snitramordep/full/zmyWWa',
        stack: ['HTML', 'CSS', 'LESS', 'Javascript'], 
    },
    {
        title: 'Interactive Timeline',
        thumb: '/images/projects/timeline.png',
        description: 'Codepen mocks for interactive Timeline JS plugin.',
        link: 'https://codepen.io/snitramordep/full/PBZgwV',
        stack: ['HTML', 'CSS', 'LESS', 'Javascript'], 
    },
    {
        title: 'Fake text',
        thumb: '/images/projects/fake_text.png',
        description: 'Codepen for skeleton fake text.',
        link: 'https://codepen.io/snitramordep/full/OZPgwp',
        stack: ['HTML', 'CSS', 'LESS'], 
    }
]
---

<section id="projects" class="section section--projects">
    <div class="wrapper wrapper--projects">
        <h1 class="section-title">Projects </h1>
        <ul class="projects">
            {
                projects.map(project => 
                    <li class="project">
                        <div class="project__thumb">
                            <Image src={ project.thumb } alt={ project.title } width="400" height="280" class="project__thumb" />
                        </div>
                        <div class="project__details">
                            <h2 class="project__title"> 
                                <a href={ project.link } class="u-link" target="_blank"> { project.title } </a>
                            </h2>
                            <p class="project__description"> { project.description } </p>    
                            <p class="project__stack">
                                { project.stack.map(item => {
                                    return(
                                        <span class="language"> { item } </span>                                    
                                    )
                                }) }    
                            </p>
                        </div>        
                    </li>
                )
            }
        </ul>
    </div>
</section>

<style lang="less">

    .projects {
        display: grid;
        gap: 1.5rem;
        grid-template-columns: 1fr;
    }

    .project {
        border: 2px solid var(--bg-color-light);
        border-radius: 12px;
        box-shadow: 0 6px 18px rgba(255, 255, 255, .06);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        margin-block-end: 6rem;
        padding: 3rem;
        max-width: 100%;
        min-width: 0px;
    }

    .project__thumb {
        aspect-ratio: 16 / 9;
        flex-shrink: 0;
        width: 100%;

        img {
            height: 100%;
            object-fit: contain;
            object-position: center top;
            width: 100%;
        }
    }

    .project__details {
        display: flex;
        flex-direction: column;
        flex-grow: 1;
    }

    .project__title {
        color: var(--font-color);
        display: block;
        font-family: 'Share Tech Mono', monospace;
        font-size: 2.7rem;
        font-weight: 700;
        margin-block-start: 0;
        margin-block-end: 2rem;

        &::before {
            color: var(--accent-color);
            content: '>';
            margin-inline-end: .75rem;
        }
    }

    .project__description {
        flex-grow: 1;
    }

    .project__stack {
        display: flex;
        flex-wrap: wrap;
        gap: 1.5rem;
        margin-block-end: 0;
    }

    .language {
        background-color: var(--font-color);
        border-radius: 5px;
        color: var(--bg-color);
        font-weight: 600;
        font-size: 13px;
        padding: .75rem 1.5rem;
        text-transform: uppercase;
    }

    @media all and (min-width: 992px) {

        .projects {
            display: grid;
            gap: 1.5rem;
            grid-template-columns: repeat(2, 1fr);
        }
    }
</style>